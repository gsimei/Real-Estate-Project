<%= simple_form_for(@property) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :published %>
  <%= f.check_box :published %>

  <%= f.label :highlighted %>
  <%= f.check_box :highlighted %>

  <!-- Fields for nested attributes -->
  <%= f.fields_for :footage do |ff| %>
    <%= ff.label "Area do terreno" %>
    <%= ff.number_field :area_do_terreno, step: 0.01 %>

    <%= ff.label :area_construida %>
    <%= ff.number_field :area_construida, step: 0.01 %>

    <%#= ff.label :area_total %>
    <%#= ff.number_field :area_total, step: 0.01 %>
  <% end %>

  <%= f.fields_for :services do |ff| %>
    <%= ff.label :dormitorio_empregada %>
    <%= ff.check_box :dormitorio_empregada %>

    <%= ff.label :area_servico %>
    <%= ff.check_box :area_servico %>

    <%= ff.label :energia_eletrica %>
    <%= ff.check_box :energia_eletrica %>

    <%= ff.label :banheiro_empregada %>
    <%= ff.check_box :banheiro_empregada %>
  <% end %>

  <%= f.fields_for :leisure do |ff| %>
    <%= ff.label :adega %>
    <%= ff.check_box :adega %>

    <%= ff.label :campo_futebol %>
    <%= ff.check_box :campo_futebol %>

    <%= ff.label :churrasqueira %>
    <%= ff.check_box :churrasqueira %>

    <%= ff.label :piscina %>
    <%= ff.check_box :piscina %>

    <%= ff.label :jardim %>
    <%= ff.check_box :jardim %>
  <% end %>

  <%= f.submit %>
<% end %>
